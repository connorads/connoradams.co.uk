---
import Icon from "../components/Icon.astro";
let title = "Connor Adams";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="icon" type="image/png" href="/assets/favicon.pngs" />
    <link rel="stylesheet" href={Astro.resolve("../styles/global.css")} />

    <script type="module" src={Astro.resolve("../ga.js")}></script>

    <script type="module" src={Astro.resolve("../background.ts")}></script>
  </head>
  <body class="bg-emerald-500 min-h-screen">
    <div class="flex items-center justify-center pt-12 pb-6">
      <div
        class="bg-white rounded-xl px-6 py-4 md:px-12 md:py-12 space-y-4 md:space-y-6 xl:space-y-8"
      >
        <h1
          class="text-center uppercase text-3xl md:text-5xl xl:text-7xl mx-auto"
        >
          Connor Adams
        </h1>
        <img
          class="rounded-full h-24 md:h-36 xl:h-48 mx-auto"
          src="/assets/profile.jpg"
          alt="Photo of Connor Adams"
        />
        <h2
          class="text-center uppercase text-l md:text-2xl xl:text-4xl mx-auto"
        >
          Developer & Tech Enthusiast
        </h2>
        <div class="flex justify-center">
          <p
            class="text-center text-xl md:text-3xl xl:text-4xl leading-relaxed md:leading-relaxed xl:leading-relaxed max-w-sm md:max-w-xl xl:max-w-2xl"
          >
            Would you like to
            <a
              class="underline hover:no-underline"
              href="https://studywith.connoradams.co.uk/">Study with Connor</a
            >? ðŸŽ“
          </p>
        </div>
        <div class="flex justify-center space-x-4">
          <Icon
            href="https://www.linkedin.com/in/connoradams"
            src="/assets/icon-linkedin.svg"
            alt="LinkedIn profile"
          />
          <Icon
            href="https://twitter.com/connorads"
            src="/assets/icon-twitter.svg"
            alt="Twitter profile"
          />
          <Icon
            href="https://medium.com/@connorads"
            src="/assets/icon-medium.svg"
            alt="Medium profile"
          />
          <Icon
            href="https://github.com/connorads"
            src="/assets/icon-github.svg"
            alt="GitHub profile"
          />
          <Icon
            href="https://lockbot.app/"
            src="/assets/icon-lock.svg"
            alt="Lockbot Slack app"
          />
          <Icon
            href="https://thepengestkhans.co.uk/"
            src="/assets/icon-map.svg"
            alt="The Pengest Khans"
          />
        </div>
        <div class="mx-auto divide-y-2 max-w-sm md:max-w-xl">
          <div class="py-1"></div>
          <div class="py-1"></div>
        </div>
        <div class="flex flex-col justify-center">
          <h3 class="text-center text-2xl md:text-4xl xl:text-5xl">Contact</h3>
        </div>
        <form class="flex flex-col justify-center">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="m-1 border-2 border-gray-300"
          />
          <input
            type="text"
            name="email"
            placeholder="Email"
            class="m-1 border-2 border-gray-300"
          />
          <input
            type="text"
            name="message"
            placeholder="Message"
            class="m-1 border-2 border-gray-300"
          />
          <input
            type="submit"
            value="Submit"
            class="inline-block self-center font-semibold rounded-full text-white bg-black bg-opacity-90 hover:bg-gray-700 duration-300 px-4 py-2 w-32"
          />
        </form>
      </div>
    </div>
  </body>
</html>
