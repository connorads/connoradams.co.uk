---
import { Icon as AstroIcon } from "astro-icon/components";

export interface Props {
  href: string;
  name: string;
  title: string;
}

const { href, name, title } = Astro.props;
---

<a
  href={href}
  class="inline-block p-3 rounded-lg arcade-button border-4"
  style="background: linear-gradient(180deg, var(--arcade-cyan) 0%, var(--arcade-blue) 100%); border-color: var(--arcade-yellow); color: var(--dark-bg);"
  aria-label={title}
>
  <AstroIcon name={name} class="size-5 md:size-7 xl:size-10" style="color: var(--dark-bg); filter: drop-shadow(0 0 3px var(--arcade-yellow));" />
</a>
